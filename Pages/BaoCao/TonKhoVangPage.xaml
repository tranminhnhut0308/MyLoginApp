<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyLoginApp.Pages.BaoCao.TonKhoVangPage"
             BackgroundColor="#f5f5f5"
             Title="Báo cáo Vàng">

    <ScrollView Padding="5">
        <VerticalStackLayout Spacing="16">

            <!-- Thanh tìm kiếm -->
            <Frame CornerRadius="12"
                   Padding="0"
                   Margin="12,0,12,0"
                   BackgroundColor="White"
                   HasShadow="True"
                   BorderColor="#cccccc">
                <SearchBar 
                    Placeholder="Tìm theo nhóm vàng..."
                    Text="{Binding TuKhoaTimKiem}"
                    SearchCommand="{Binding ThucHienTimKiemCommand}"
                    BackgroundColor="#f0f0f0"
                    FontSize="16"
                    HeightRequest="48"
                    TextColor="#222"
                    PlaceholderColor="#888"
                    CancelButtonColor="#888" />
            </Frame>

            <!-- Danh sách tồn kho vàng -->
            <CollectionView ItemsSource="{Binding DanhSachHienThi}">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Span="1"
                                     Orientation="Vertical"
                                     HorizontalItemSpacing="8"
                                     VerticalItemSpacing="16" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="#ddd"
                               BackgroundColor="White"
                               Padding="12"
                               CornerRadius="12"
                               Margin="4"
                               HasShadow="True">
                            <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto"
                                  ColumnDefinitions="*, *"
                                  ColumnSpacing="12"
                                  RowSpacing="6">

                                <!-- Nhóm vàng -->
                                <Label Text="Nhóm:" Grid.Row="0" Grid.Column="0" FontAttributes="Bold"/>
                                <Label Text="{Binding NHOM_TEN}" Grid.Row="0" Grid.Column="1"/>

                                <!-- TL Thực -->
                                <Label Text="TL Thực:" Grid.Row="1" Grid.Column="0" FontAttributes="Bold"/>
                                <Label Text="{Binding TL_THUC, StringFormat='{0:N2}'}" Grid.Row="1" Grid.Column="1"/>

                                <!-- TL Hột -->
                                <Label Text="TL Hột:" Grid.Row="2" Grid.Column="0" FontAttributes="Bold"/>
                                <Label Text="{Binding TL_HOT, StringFormat='{0:N2}'}" Grid.Row="2" Grid.Column="1"/>

                                <!-- Cân Tổng -->
                                <Label Text="Cân Tổng:" Grid.Row="3" Grid.Column="0" FontAttributes="Bold"/>
                                <Label Text="{Binding CAN_TONG, StringFormat='{0:N2}'}" Grid.Row="3" Grid.Column="1"/>

                                <!-- Công gốc -->
                                <Label Text="Công Gốc:" Grid.Row="4" Grid.Column="0" FontAttributes="Bold"/>
                                <Label Text="{Binding CONG_GOC, StringFormat='{0:N0}'}" Grid.Row="4" Grid.Column="1"/>

                                <!-- Giá công -->
                                <Label Text="Giá Công:" Grid.Row="5" Grid.Column="0" FontAttributes="Bold"/>
                                <Label Text="{Binding GIA_CONG, StringFormat='{0:N0}'}" Grid.Row="5" Grid.Column="1"/>

                                <!-- Đơn giá bán -->
                                <Label Text="Đơn Giá Bán:" Grid.Row="6" Grid.Column="0" FontAttributes="Bold"/>
                                <Label Text="{Binding DON_GIA_BAN, StringFormat='{0:N0}'}"
                                       TextColor="Green"
                                       Grid.Row="6" Grid.Column="1"/>

                                <!-- Số lượng tồn -->
                                <Label Text="Số Lượng Tồn:" Grid.Row="7" Grid.Column="0" FontAttributes="Bold"/>
                                <Label Text="{Binding SL_TON, StringFormat='{0:N0}'}"
                                       TextColor="Red"
                                       Grid.Row="7" Grid.Column="1"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Phân trang -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="30" Margin="0,20,0,10">
                <Button Text="Trước"
                        Command="{Binding TrangTruocCommand}"
                        IsEnabled="{Binding CoTrangTruoc}"
                        BackgroundColor="#FF8C00"
                        TextColor="White"
                        CornerRadius="20"
                        WidthRequest="100" />
                <Button Text="Sau"
                        Command="{Binding TrangSauCommand}"
                        IsEnabled="{Binding CoTrangSau}"
                        BackgroundColor="#FF8C00"
                        TextColor="White"
                        CornerRadius="20"
                        WidthRequest="100" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
